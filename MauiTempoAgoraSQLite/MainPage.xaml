<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTempoAgoraSQLite.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Entry x:Name="txt_cidade" />
            <Button Text="Buscar Previsão" Clicked="Button_Clicked" />

            <Label x:Name="lbl_res" />

            <ListView x:Name="lst_produtos"
                      IsPullToRefreshEnabled="True">
                <ListView.Header>
                    <Grid ColumnDefinitions="300, 300, 300, 300"
                          BackgroundColor="{StaticResource Gray100}">
                        <Label Grid.Column="0" Text="Data" Padding="5" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="Cidade" FontAttributes="Bold" />
                        <Label Grid.Column="2" Text="Temperatura" FontAttributes="Bold" />
                        <Label Grid.Column="3" Text="Previsão" FontAttributes="Bold" />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover" Clicked="MenuItem_Clicked" />
                            </ViewCell.ContextActions>
                            <Grid ColumnDefinitions="300, 300, 300, 300">
                                <Label Grid.Column="0" Text="{Binding Data}" Padding="5" />
                                <Label Grid.Column="1" Text="{Binding cidade}" />
                                <Label Grid.Column="2" Text="{Binding temp_max}" />
                                <Label Grid.Column="3" Text="{Binding description}" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>