 ﻿<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgoraSQLite.MainPage">

    <ScrollView>
        <VerticalStackLayout          
            <Entry x:Name="txt_cidade" />
            <Button Text="Buscar Previsão" Clicked="Button_Clicked" />

            <Label x:Name="lbl_res" />

            <ListView x:Name="lst_produtos"
                      IsPullToRefreshEnabled="True"
                      Refreshing="lst_produtos_Refreshing">
                
            </ListView>

            <WebView x:Name="wv_mapa" HeightRequest="500" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>